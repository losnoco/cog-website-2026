  <script>
    (() => {
      "use strict";
      const storedTheme = localStorage.getItem("theme");
      const prefersDark = () => window.matchMedia("(prefers-color-scheme: dark)").matches;

      const setTheme = (theme: string) => {
        const isDark = theme === "dark" || (theme === "auto" && prefersDark());
        document.documentElement.classList.toggle("dark", isDark);
        document.documentElement.setAttribute("data-theme", theme);
      };

      setTheme(storedTheme ?? (prefersDark() ? "dark" : "light"));

      window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", () => {
        const stored = localStorage.getItem("theme");
        if (stored !== "light" && stored !== "dark") setTheme("auto");
      });

      window.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll("[data-theme-value]").forEach((el) => {
          el.addEventListener("click", () => {
            const theme = el.getAttribute("data-theme-value");
            if (theme) { localStorage.setItem("theme", theme); setTheme(theme); }
          });
        });

        // Hamburger toggle
        const btn = document.getElementById("nav-toggle");
        const nav = document.getElementById("nav-body");
        if (btn && nav) {
          btn.addEventListener("click", () => {
            const open = nav.classList.toggle("hidden");
            btn.setAttribute("aria-expanded", String(!open));
          });
          // Close drawer when resizing to desktop
          window.matchMedia("(min-width: 640px)").addEventListener("change", (e) => {
            if (e.matches) nav.classList.add("hidden");
          });
        }
      });
    })();
  </script>
